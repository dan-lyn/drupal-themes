{% set classes = [] %}
{% if page %}
    {% set classes = ['page'] %}
{% endif %}

<article{{ attributes.addClass(classes) }}>

    <header>
        <h2>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
    </header>
        
    <div>{{ content|without('links', 'field_tags') }}</div>

    {% if content.links %}
    <footer>
        <div class="node__links">
            {{ content.links }}
        </div>
    </footer>
    {% endif %}
    
</article>

